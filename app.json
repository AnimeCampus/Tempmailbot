{
  "name": "temp-mail-bot",
  "description": "Telegram bot for temporary email addresses",
  "repository": "https://github.com/PyroUserBot/Tempmailbot",
  "keywords": ["telegram", "bot"],

  "env": {
    "TELEGRAM_TOKEN": {
      "description": "Token for accessing the Telegram Bot API",
      "required": true
    }
  },
  
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "start": "python3 bot.py"
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  }
}

